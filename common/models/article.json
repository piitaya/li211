{
  "name": "article",
  "plural": "articles",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "draft"
    }
  },
  "validations": [],
  "relations": {
    "author": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "authorId"
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "articleId"
    }
  },
  "acls": [],
  "methods": {}
}
